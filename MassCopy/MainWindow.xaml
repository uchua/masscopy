<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MassCopy" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="212*"/>
            <ColumnDefinition Width="185*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Copy From" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="401" Width="380">
            <ListView HorizontalAlignment="Left" Height="300" Margin="10,10,-2,0" VerticalAlignment="Top" Width="360">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="Copy To" HorizontalAlignment="Left" Margin="403,10,0,0" VerticalAlignment="Top" Height="401" Width="380" Grid.ColumnSpan="2">
            <ListView HorizontalAlignment="Left" Height="300" Margin="10,10,-2,0" VerticalAlignment="Top" Width="360">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>
