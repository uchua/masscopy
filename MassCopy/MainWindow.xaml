<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MassCopy" Height="450" Width="800" MinHeight="300" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Copy From" Margin="5,5,5,5">
            <Grid x:Name="CopyFromGrid" Margin="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="CopyFromCell">
                    <ListBox x:Name="CopyFromList" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Height="{Binding ActualHeight, ElementName=CopyFromCell, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=CopyFromCell, Mode=OneWay}" SelectionChanged="ListBox_SelectionChanged" SelectionMode="Multiple" AllowDrop="False"/>
                </Grid>
                <TextBox x:Name="CopyFromTextBox" HorizontalAlignment="Left" Height="23" Margin="0,3,0,0" Grid.Row="1" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=CopyFromGrid, Mode=OneWay}" Text="Source Path"/>
                <Button x:Name="CopyFromAddFile" Content="Add File" HorizontalAlignment="Left" Margin="0,3.667,0,4.333" Grid.Row="2" VerticalAlignment="Center" Width="Auto" FontWeight="Bold"/>
                <Button x:Name="CopyFromAddFolder" Content="Add Folder" HorizontalAlignment="Left" Margin="55,3.667,0,4.333" Grid.Row="2" VerticalAlignment="Center" Width="Auto" FontWeight="Bold" RenderTransformOrigin="1.263,0.533"/>
                <Button x:Name="CopyFromSub" Content="-" HorizontalAlignment="Left" Margin="127,3.667,0,4.333" Grid.Row="2" VerticalAlignment="Center" Width="20" FontWeight="Bold" RenderTransformOrigin="2.425,0.708"/>
                <CheckBox x:Name="Overwrite" Content="Overwrite" Grid.Row="2" HorizontalAlignment="Left" Margin="152,6.667,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Copy To" Margin="5,5,5,5">
            <Grid x:Name="CopyToGrid" Margin="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="CopyToCell">
                    <ListBox x:Name="CopyToList" HorizontalAlignment="Left" VerticalAlignment="Top" Height="{Binding ActualHeight, ElementName=CopyToCell, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=CopyToCell, Mode=OneWay}" SelectionChanged="ListBox_SelectionChanged_1" SelectionMode="Multiple" AllowDrop="False"/>
                </Grid>
                <TextBox x:Name="CopyToTextBox" HorizontalAlignment="Left" Height="23" Margin="0,3,0,0" Grid.Row="1" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=CopyToGrid, Mode=OneWay}" Text="Destination Path"/>
                <Button x:Name="CopyToAdd" Content="+" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                <Button x:Name="CopyToSub" Content="-" HorizontalAlignment="Left" Margin="25,3.667,0,4.333" Grid.Row="2" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
            </Grid>
        </GroupBox>
        <Button x:Name="BeginCopy" Content="Copy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Row="1" Grid.Column="0" Width="45"/>
    </Grid>
</Window>